# Enclava Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Privatemode.ai API Key (REQUIRED)
# Get your key at: https://privatemode.ai
PRIVATEMODE_API_KEY=your-privatemode-api-key-here

# Database
POSTGRES_DB=enclava_db
POSTGRES_USER=enclava_user
POSTGRES_PASSWORD=enclava_pass

# Security
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Application URL
BASE_URL=http://localhost
NEXT_PUBLIC_BASE_URL=http://localhost

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# PrivateMode.ai Advanced Settings
PRIVATEMODE_CACHE_MODE=memory
PRIVATEMODE_CACHE_SALT=
PRIVATEMODE_LOG_LEVEL=INFO

# Redis
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb

# Network & Ports
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:3002
BACKEND_INTERNAL_PORT=8000
FRONTEND_INTERNAL_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Performance
BACKEND_WORKERS=4
MAX_CONNECTIONS=100

# Logging
LOG_LEVEL=INFO
LOG_LLM_PROMPTS=false

# Storage Paths
DATA_PATH=./data
LOG_PATH=./logs
UPLOAD_PATH=./uploads
PLUGIN_PATH=./plugins

# Qdrant Vector Database
QDRANT_LOG_LEVEL=INFO
QDRANT_ON_DISK=true
QDRANT_MAX_REQUEST_SIZE=32
QDRANT_INDEX_THRESHOLD=20000

# ============================================================================
# PRODUCTION DEPLOYMENT NOTES
# ============================================================================
#
# SECURITY CHECKLIST:
# [ ] Add your PRIVATEMODE_API_KEY from https://privatemode.ai
# [ ] Generate strong JWT_SECRET: openssl rand -hex 32
# [ ] Set strong POSTGRES_PASSWORD (16+ characters)
# [ ] Set strong ADMIN_PASSWORD
# [ ] Update BASE_URL to your actual domain
# [ ] Add REDIS_PASSWORD for production